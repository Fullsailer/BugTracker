@page
@model LoginModel

@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Log in";
}

<!-- /.login-logo -->
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>

        <form id="account" method="post">
            <div class="input-group mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" asp-for="Input.RememberMe" />
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        <hr />
        <div class="col-md-8 col-lg-">
            <section>
                <h4>You can also use a demo user to log in.</h4>
                <hr />
                <form class="" id="account" method="post">
                    <div class="form-group-lg">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                                <button type="submit" class="btn btn-primary" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                                <button type="submit" class="btn btn-primary" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                                <button type="submit" class="btn btn-primary" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>

        <div class="social-auth-links text-center mb-3">

        </div>
        <!-- /.social-auth-links -->

        <p class="mb-1">
            <a href="/Identity/Account/ResetPassword" class="nav-link">I forgot my password</a>
        </p>
        <p class="mb-0">
            <a href="register.html" class="text-center">Register a new membership</a>
        </p>
    </div>
    <!-- /.login-card-body -->
</div>


